<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.aisw.mapper.QuizMapper">

    <select id="selectRandomQuizzes" resultType="net.aisw.dto.QuizDTO">
        SELECT * FROM quiz ORDER BY RAND() LIMIT 5
    </select>

    <select id="selectBySeqList" parameterType="list" resultType="net.aisw.dto.QuizDTO">
        SELECT * FROM quiz WHERE q_seq IN
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>
