<?xml version= "1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0// EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.aisw.mapper.CommunityMapper">
    <insert id="SavePost" parameterType="net.aisw.dto.communityDTO">
        INSERT INTO community(c_title, c_contents, u_name, u_id)
        values(#{c_title}, #{c_contents}, #{u_name}, #{u_id})
    </insert>
    
    <select id="getCommunityInfo" resultType="net.aisw.dto.communityDTO">
		select * from community order by c_seq desc
	</select>
    
    <select id="getCommunityDetail" parameterType="int" resultType="net.aisw.dto.communityDTO">
        SELECT * FROM community WHERE c_seq = #{c_seq}
    </select>
    
    <update id="EditPostSubmit" parameterType="net.aisw.dto.communityDTO">
        UPDATE community
        SET c_title = #{c_title}, c_contents = #{c_contents}
        WHERE c_seq = #{c_seq}
    </update>
    
    <delete id="DeletePost" parameterType="int">
    	DELETE FROM community
    	WHERE c_seq = #{c_seq}
    </delete>
</mapper>